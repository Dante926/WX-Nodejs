.banner {
  height: 600rpx;
}

.banner-image {
  width: 100%;
  height: 60vh;
}

.name {
  background-color: #fff;
  padding: 15rpx;
  font-size: 40rpx;
  font-weight: bold;
}

.container {
  background-color: #fff;
  margin-top: 20rpx;
}

.container .item {
  padding: 15rpx;
  display: flex;
  align-items: center;
  font-size: 36rpx;
}

.label {
  width: 70rpx;
  color: #999;
  font-size: 26rpx;
  margin-right: 20rpx;
}

.desc {
  background-color: #fff;
  font-size: 36rpx;
  padding-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  /* 如果内容超过一行，允许换行 */
}

.bottom {
  display: flex;
  background-color: #fff;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.bottom-left {
  display: flex;
  background-color: #f3f3f3;
  align-items: center;
  border-radius: 30rpx;
  width: 40%;
}

.icon-comment {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}

.icon-collection {
  width: 45rpx;
  height: 45rpx;
}


.bottom-right {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.confirm {
  margin-left: 175rpx;
}

.bottom-left-text {
  font-size: 36rpx;
}


.desc-text1 {
  display: block;
  /* 或者 display: inline-block; */
  width: 100%;
}

.comment {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
  padding-bottom: 140rpx;
  position: relative;
}

.comment .title {
  font-size: 40rpx;
  font-weight: 600;
  text-align: center;
}

.comment-list {
  display: flex;
  margin-top: 20rpx;
  flex-direction: column;
  max-height: 400rpx; /* 设置最大高度 */
  overflow-y: scroll; /* 允许纵向滚动 */
}

.comment-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 35rpx;
  border-bottom: 3rpx solid #f3f3f3;
}

.comment-item-left {
  display: flex;
  align-items: center;
}

.comment-item-left .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.comment-item-left .content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}

.comment .comment-textarea {
  border: 1px solid #000000;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
}

.comment .comment-btn {
  position: absolute;
  bottom: 143rpx;
  right: 24rpx;
  border-radius: 20rpx;
  color: #fff;
  z-index: 11;
}

.nickname {
  font-size: 30rpx;
  color: #000000;
}

.comment-item-right {
  font-size: 26rpx;
  color: #999;
}


.modal {
  position: fixed;
  /* 使用 fixed 确保弹窗在视口中 */
  top: 50%;
  /* 垂直居中 */
  left: 50%;
  /* 水平居中 */
  transform: translate(-50%, -50%);
  /* 通过偏移量居中 */
  background: rgba(255, 255, 255, 0.95);
  /* 半透明背景 */
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  box-sizing: border-box;
  width: 90%;
  /* 宽度为视口的90% */
  max-width: 600rpx;
  /* 最大宽度 */
  border-radius: 40rpx;
  /* 圆角边框 */
  z-index: 1000;
  /* 确保弹窗在其他内容之上 */
}

/* 背景遮罩 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  /* 半透明遮罩 */
  z-index: 999;
  /* 确保在弹窗下 */
}

.modal .label {
  width: 100%;
  color: #000000;
  font-weight: 600;
  font-size: 36rpx;
}

.textarea {
  width: 100%;
  border: 1rpx solid #999;
  border-radius: 5rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin: 20rpx 0;
}

.btn-list {
  display: flex;
  justify-content: space-between;
  /* 分配按钮位置 */
  margin-top: 20rpx;
}

.modal .upload-btn {
  margin: 20rpx auto;
  background-color: #fe2442;
  color: #fff;
}

.modal .upload-img {
  width: 40%;
  height: 280rpx;
  margin: 20rpx 0;
}