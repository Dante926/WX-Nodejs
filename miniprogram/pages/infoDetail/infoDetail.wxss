.banner {
  height: 600rpx;
}

.banner-image {
  width: 100%;
  height: 60vh;
}

.name {
  background-color: #fff;
  padding: 15rpx;
  font-size: 40rpx;
  font-weight: bold;
}

.container {
  background-color: #fff;
  margin-top: 20rpx;
}

.container .item {
  padding: 15rpx;
  display: flex;
  align-items: center;
  font-size: 36rpx;
}

.label {
  width: 70rpx;
  color: #999;
  font-size: 26rpx;
  margin-right: 20rpx;
}

.desc {
  background-color: #fff;
  font-size: 36rpx;
  padding-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  /* 如果内容超过一行，允许换行 */
}

.bottom {
  display: flex;
  background-color: #fff;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.bottom-left {
  display: flex;
  background-color: #f3f3f3;
  align-items: center;
  border-radius: 30rpx;
  width: 40%;
}

.icon-comment {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}

.icon-collection {
  width: 45rpx;
  height: 45rpx;
}

.bottom-right {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bottom-left-text {
  font-size: 36rpx;
}


.desc-text1 {
  display: block;
  /* 或者 display: inline-block; */
  width: 100%;
}

.comment {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
  padding-bottom: 140rpx;
  position: relative;
}

.comment .title {
  font-size: 40rpx;
  font-weight: 600;
  text-align: center;
}

.comment-list {
  display: flex;
  margin-top: 20rpx;
  flex-direction: column;
}

.comment-item {
  display: flex;
  justify-content: space-between;
  /* align-items: center; */
  margin-bottom: 35rpx;
  border-bottom: 3rpx solid #f3f3f3;
}

.comment-item-left {
  display: flex;
  align-items: center;
}

.comment-item-left .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.comment-item-left .content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}

.comment .comment-textarea {
  border: 1px solid #000000;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
}

.comment .comment-btn {
  position: absolute;
  bottom: 143rpx; 
  right: 24rpx;
  border-radius: 20rpx;
  color: #fff; 
  z-index: 11;
}

.nickname{
  font-size: 30rpx;
  color: #000000;
}

.comment-item-right{
  font-size: 26rpx;
  color: #999;
}