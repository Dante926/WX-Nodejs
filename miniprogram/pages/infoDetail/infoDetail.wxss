.banner {
  height: 600rpx;
}

.banner-image {
  width: 100%;
  height: 60vh;
}

.name{
  background-color: #fff;
  padding: 15rpx;
  font-size: 40rpx;
  font-weight: bold;
}

.container{
  background-color: #fff;
  margin-top: 20rpx;
}

.container .item{
  padding: 15rpx;
  display: flex;
  align-items: center;
  font-size: 36rpx;
}

.label{
  width: 70rpx;
  color: #999;
  font-size: 26rpx;
  margin-right: 20rpx;
}

.desc{
  background-color: #fff;
  font-size: 36rpx;
  padding-top: 10rpx;
  display: flex;
}

.bottom{
  display: flex;
  background-color: #fff;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  width: 100%;
  margin-bottom: 10rpx;
}

.bottom-left{
  display: flex;
  background-color: #f3f3f3;
  align-items: center;
  border-radius: 30rpx;
  width: 40%;
}

.icon-comment{
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}

.icon-collection{
  width: 45rpx;
  height: 45rpx;
}

.bottom-right{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bottom-left-text{
  font-size: 36rpx;
}
