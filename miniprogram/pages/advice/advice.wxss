/* feedback.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.header {
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 30rpx;
  color: #333;
}

.form {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.form-item {
  margin-bottom: 20rpx;
}

.label {
  display: block;
  font-size: 30rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.input, .textarea {
  width: 100%;
  padding: 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 30rpx;
}

.textarea {
  height: 100rpx;
  line-height: 1.5;
  resize: vertical;
}

.submit-button {
  width: 100%;
  padding: 12rpx;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 4rpx;
  font-size: 30rpx;
  cursor: pointer;
}
