.body {
  /* width: 100vw; */
  min-height: 100vh;
  background-color: #fff;
}

.top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 20rpx;
  /* width: 100%; */
  box-sizing: border-box;
  border-bottom: 5rpx solid #f3f3f3;
}

.top .top-btn {
  margin: 0 !important;
  background-color: #fe2442;
  color: #fff;
  border-radius: 40rpx;
  width: 150rpx;
  font-size: 32rpx;
}

.top .top-delete {
  width: 50rpx;
  height: 50rpx;
  color: black;
}

.container {
  padding: 30rpx 35rpx 50rpx 35rpx;
}

.type {
  display: flex;
  align-items: center;
  justify-content: center;
}

.type .type-item {
  background-color: #eee;
  padding: 10rpx 70rpx;
  border: 1rpx solid #aaa;
  border-radius: 10rpx;
  font-size: 34rpx;
  margin: 0 10rpx;
}

.type .type-select {
  background-color: #fe2442;
  color: #fff;
}

.classify {
  margin-top: 25rpx;
  white-space: nowrap;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 34rpx;
}

.classify .picker {
  width: 100%;
}

.picker .empty,
.select {
  border: 5rpx solid #aaa;
  width: 100%;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  margin-left: 5rpx;
  border-radius: 15rpx;
  font-size: 34rpx;
  align-items: center;
}

.select-icon {
  width: 50rpx;
  height: 50rpx;
}

.picker .empty .select-icon{
  width: 50rpx;
  height: 50rpx;
}

.input-list {
  font-size: 34rpx;
  padding: 0rpx  10rpx;
  border-top: 5rpx dashed  #f3f3f3;
  border-bottom: 5rpx dashed  #f3f3f3;
  /* padding-top: 50rpx; */
  margin-top: 20rpx;
}

.input-list .input-item {
  margin-bottom: 40rpx;
}

.desc{
  padding: 30rpx 15rpx;
  border-bottom: 5rpx solid #f3f3f3;
  position: relative;
}

.desc-image{
   width: 50rpx;
   height: 50rpx;
   position: absolute;
   top: 20rpx;
   right: 0;
}

.upload{
  padding-top: 20rpx;
}

.upload .upload-top{
  display: flex;
  justify-content: space-between;
}

.upload .upload-list{
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.upload .upload-list .default{
  width: 33%;
  height: 240rpx;
}


.img-list{
  width: 33%;
  height: 240rpx;
  position: relative;
}

.img-list .img-list-item{
  width: 100%;
  height: 100%;
}

.img-list .delete{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  z-index: 10;
}