<view class="body">
  <SearchInput />

  <view class="classify-container">

    <view class="classify-left">
      <view 
      class="classify-left-item {{select === index ? 'classify-select' : ''}}"
      wx:for="{{asideBar}}" 
      wx:key="index"
      data-index="{{index}}"
      bindtap="selectLeft"
      >
        <text class="classify-left-text">{{item}}</text>
        <block wx:if="{{select === index}}">
          <view class="classify-line"></view>
        </block>
      </view>
    </view>

    <view class="classify-right">
      <view class="classify-right-item" wx:for="{{[1,1,1,1,1,1,1,1]}}" wx:key="index">
        <image class="classify-right-image" src="../../images/tabbar/主页 (1).png" />
        <text class="classify-right-text">身份证</text>
      </view>
    </view>

  </view>
</view>