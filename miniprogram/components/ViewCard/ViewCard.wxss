.body {
  /* font-size: 14px; */
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  /* font-weight: 600; */
  padding-bottom: 35px;
}

.banner {
  height: 400rpx;
}

.banner-image {
  width: 100%;
  height: 400rpx;
}

.tab {
  display: flex;
  width: 100%;
  background-color: #fff;
}

.tab-item {
  font-size: 14px;
  font-weight: 500;
  flex: 1;
  /* 自动分配tab个数的（容器空间）占比 */
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  position: relative;
}

.tab-line {
  position: absolute;
  width: 65%;
  height: 0px;
  border: 1px solid #fe2442;
  background-color: #fe2442;
  /* 下划线的颜色 */
  bottom: 0;
}

.tab-default {
  background-color: #f3f3f3;
}

.lose {
  display: flex;
  flex-direction: column;
}

.lose-item {
  width: 100%;
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 5rpx;
  box-sizing: border-box;
}

.lose-item .lose-image {
  margin-top: 10rpx;
  width: 248rpx;
  height: 248rpx;
  min-width: 248rpx;
  border-radius: 10rpx;
  transition: all 0.5s;
  -webkit-filter: drop-shadow(10rpx 10rpx 10rpx rgba(0, 0, 0, .5));
  /*考虑浏览器兼容性：兼容 Chrome, Safari, Opera */
  filter: drop-shadow(5rpx 5rpx 5rpx rgba(0, 0, 0, .5));
}

.lose-item .lose-image:hover {
  transform: scale(1.05);
  filter: drop-shadow(15rpx 15rpx 15rpx rgba(0, 0, 0, .5));
}

.lose-content {
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}

.lose-content .name {
  font-weight: bold;
}

.lose-content .region,
.date,
.desc {
  margin-top: 15rpx;
}

.lose-content {
  font-size: 32rpx;
}

.lose-content .publish-time {
  margin-top: 30rpx;
  margin-left: 241rpx;
  font-size: 26rpx;
  color: #666;
  display: flex;
}

.lose-content .desc {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  max-width: 400rpx;
}