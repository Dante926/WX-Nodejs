
.tab {
  display: flex;
  width: 100%;
  background-color: #fff;
}

.tab-item {
  font-size: 14px;
  font-weight: 500;
  flex: 1;
  /* 自动分配tab个数的（容器空间）占比 */
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  position: relative;
}

.tab-line {
  position: absolute;
  width: 65%;
  height: 0px;
  border: 1px solid #fe2442;
  background-color: #fe2442;
  /* 下划线的颜色 */
  bottom: 0;
}

.tab-default {
  background-color: #f3f3f3;
}